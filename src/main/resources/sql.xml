<?xml version="1.0" encoding="UTF-8" ?>

<mapper namespaces="">

	<import file="sql_file.sql"/>
	
	<script name="SCRIPT" file="script.sql" />
	
	<global key="key" value="value" />

	<sql name="SQL_NAME">
		select /* NO_CACHE, SHOW=ERROR */ * from :table where 1=1 {name} {id} {order}
		<choose when="id" statement="id">
			and id = :id
		</choose>
		<choose when="name">
			and name = :name
		</choose>
		<choose when="id" statement="order">
			order by id
		</choose>
	</sql>

</mapper>